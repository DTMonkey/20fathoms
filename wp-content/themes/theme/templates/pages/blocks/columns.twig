<section class="section__columns">
  <div class="inner-container">
    
    <h2>{{item.section_title}}</h2>

    {% set column = item.column_layout %}
    {% set card = item.column_cards %}
    {% set flexAlign = (column == 'flex') ? item.flex_align_columns : 'false' %}

    {% set rowClass = [
      column == 'flex' ? 'row__flex' : 'row',
      flexAlign and flexAlign == 'center' ? 'row__flex-align-items-center',
      card ? 'column-cards'
    ] %}

    {% set columnClass = [
      'column',
      column == 'one' ? 'mobile-col-1-1',
      column == 'two' ? 'mobile-col-1-1 tablet-col-1-2',
      column == 'three' ? 'mobile-col-1-1 tablet-col-1-3',
      column == 'four' ? 'mobile-col-1-1 tablet-col-1-2 desktop-col-1-4',
      column == 'five' ? 'mobile-col-1-1 tablet-col-1-2 desktop-col-1-5',
      column == 'flex' ? 'column-item'
      ] %}

    <div {{addClass(rowClass)}}>
      {% for column in item.column_content %}
        <div {{addClass(columnClass)}}>

          {% if column.column_image %}
          <div class="column-item__image">
            <img src="{{column.column_image.url}}" alt="{{column.column_image.alt}}">
          </div>
          {% endif %}

          {% if column.column_text %}
          <div class="column-item__content">
            {{column.column_text}}
          </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>